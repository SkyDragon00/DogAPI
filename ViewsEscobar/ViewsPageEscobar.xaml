<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DogAPI.ViewsEscobar.ViewsPageEscobar"
             Title="Cute and awesome dogs for you">
    <Grid BackgroundColor="PaleVioletRed">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Centrar la imagen -->
        <Image x:Name="dogsImage" Aspect="AspectFit" Source="dog_image.jpg" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="500" HeightRequest="500" />

        <!-- Botones debajo de la imagen -->
        <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button Text="Guardar" Clicked="GuardarButton_Clicked" />
            <Button Text="Dame otro perro" Clicked="OtroperroButton_Clicked" />
        </StackLayout>
    </Grid>
</ContentPage>